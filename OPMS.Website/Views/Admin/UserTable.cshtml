<script>
    $(document).ready(function () {
      var url = URL + "api/User/GetAll";
    // prepare the data
    var source =
    {
        datatype: "json",
        datafields: [
            { name: 'UserId', type: 'int' },
            { name: 'UserName' },
            { name: 'Password' },
            { name: 'ContactNo' },
            { name: 'Email' },
            { name: 'IsActive', type: 'bool' }
        ],
        id: 'Id',
        url: url,
        root: 'data'
    };
    var dataAdapter = new $.jqx.dataAdapter(source);

    $("#userGrid").jqxGrid(
        {
            width: '100%',
            source: dataAdapter,
            columnsresize: true,
            columns: [
                { text: 'Id', dataField: 'UserId', width: 200},
                { text: 'User Name', dataField: 'UserName', width: 200},
                { text: 'Password', dataField: 'Password', width: 180 },
                { text: 'ContactNo', dataField: 'ContactNo', width: 180 },
                { text: 'EMail', dataField: 'Email', width: 180 },
                { text: 'IsActive', dataField: 'IsActive' }
            ]
        });
   });
    $("#userBtnAdd").click(function ()
        {
    var userName = $("#userName").val();
            var Password = $("#password").val();
            var phoneNo = $("#phoneNo").val();
            var email = $("#email").val();

    var postData = {
        "Name": userName,
        "Password": Password,
        "phoneNo": phoneNo,
        "email":email
    };

    $.ajax({
        type: "POST",
        url: URL + 'api/User/Add',
        contentType: "application/json; charset=utf-8",
        data: JSON.stringify(postData),
        dataType: "json",
        success: function (msg) {

            alert("Data Inserted Successfully");
            window.location.reload();
        },
        error: function (req, status, error) {
            alert("Error try again");
        }
    });
  });
</script>
