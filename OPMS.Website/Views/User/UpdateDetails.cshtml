
@{
    ViewBag.Title = "UpdateDetails";
    Layout = "~/Views/_Shared/UserMasterLayoutPage.cshtml";
}

<h2>UpdateDetails</h2>

<div class="row">
    <div class="col-lg-3">

    </div>

    <div class="col-lg-3">
        <div class="row">
            <div class="col-lg-12">
                <br>
                <h2>Update Your Profile</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6">
                User Name
            </div>
            <div class="col-lg-6" style="padding:2px">

                <input id="userName" disabled />
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6">
                City
            </div>
            <div class="col-lg-6" style="padding:2px">
                <div id="dropDownCity"></div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6">
                Address1
            </div>
            <div class="col-lg-6" style="padding:2px">
                <input id="add1" />
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6">
                Address2
            </div>
            <div class="col-lg-6" style="padding:2px">
                <input id="add2" />
            </div>
        </div>
        

        <div class="row">
            <div class="col-lg-12">
                <input type="button" class="btn btn-success pull-right" value="Update" id="userDetailsBtnAdd" />
            </div>
        </div>
    </div>
    <div class="col-lg-6">
        <br>
        <br>
        <br>
        <div id="userDetailsGrid"></div>
    </div>

</div>

<script>
    function UpdateUserDetails() {

        var userid = $.cookie('userid');
        $.ajax({
            type: "POST",
            url: URL + 'api/UserDetails/GetDetailsByUserId/' + userid,
            contentType: "application/json; charset=utf-8",
            //data: JSON.stringify(postData),
            dataType: "json",
            success: function (msg) {

                if (msg == null) {
                    alert("Unknown Error!!!");
                }

                else {
                    $("#userName").val(msg[0].UserName);

                }
            },
            error: function (req, status, error) {
                alert("Error try again");
            }
        });

    }

    function BindCity() {
        var url = URL + "api/City/GetAll";
        // prepare the data
        var source =
        {
            datatype: "json",
            datafields: [
                { name: 'Name' },
                { name: 'CityId' }
            ],
            url: url,

            async: true
        };
        var dataAdapter = new $.jqx.dataAdapter(source);
        // Create a jqxDropDownList
        $("#dropDownCity").jqxDropDownList({
            selectedIndex: 0, source: dataAdapter, displayMember: "Name", valueMember: "CityId", width: 200, height: 30,
        });


    }
    $(document).ready(function () {


        UpdateUserDetails();
        BindCity();

        $("#userDetailsBtnAdd").click(function () {


            var cityItem = $("#dropDownCity").jqxDropDownList('getSelectedItem');
            var cityId = cityItem.value;
            var userid = $.cookie('userid');
            var Add1 = $("#add1").val();
            var Add2 = $("#add2").val();
           

            var postData = {
                "UserId": userid,
                "CityId": cityId,
                "Add1": Add1,
                "Add2": Add2,
                
            };

            $.ajax({
                type: "POST",
                url: URL + 'api/UserDetails/Add',
                contentType: "application/json; charset=utf-8",
                data: JSON.stringify(postData),
                dataType: "json",
                success: function (msg) {
                    alert("Data Updated Successfully");
                    window.location.reload();
                },
                error: function (req, status, error) {
                    alert("Error try again");
                }
            });

        });

    });
</script>
